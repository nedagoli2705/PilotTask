@model IEnumerable<PilotTask_MVC.Models.Task>
@{
    ViewBag.Title = "Tasks List";
}

<h2>Tasks List</h2>

<p>
    @Html.ActionLink("Create New Task", "Create", new { profileId = ViewBag.ProfileId })
</p>

<table class="table">
    <tr>
        <th>Task Name</th>
        <th>Whoes?</th>
        <th>Description</th>
        <th>Start Time</th>
        <th>Status</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.TaskName)</td>
            <td>@Html.DisplayFor(modelItem => item.Profile.FullName)</td>
            <td>@Html.DisplayFor(modelItem => item.TaskDescription)</td>
            <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
            <td>@Html.DisplayFor(modelItem => item.Status)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to Profile List", "Index", "Profiles", null, null)
</div>