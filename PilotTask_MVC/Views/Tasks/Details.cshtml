@model PilotTask_MVC.Models.Task
@{
    ViewBag.Title = "Task Details";
}

<h2>Task Details</h2>

<div>
    <h4>Task</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Task Name</dt>
        <dd>@Html.DisplayFor(model => model.TaskName)</dd>
        <dt>Whoes Task Is It?</dt>
        <dd>@Html.DisplayFor(model => model.Profile.FullName)</dd>
        <dt>Description</dt>
        <dd>@Html.DisplayFor(model => model.TaskDescription)</dd>
        <dt>Start Time</dt>
        <dd>@Html.DisplayFor(model => model.StartTime)</dd>
        <dt>Status</dt>
        <dd>@Html.DisplayFor(model => model.Status)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index", new { id = Model.ProfileId })
</p>
