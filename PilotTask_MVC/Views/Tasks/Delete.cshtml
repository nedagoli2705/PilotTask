@model PilotTask_MVC.Models.Task
@{
    ViewBag.Title = "Delete Task";
}

<h2>Delete Task</h2>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <h4>Task</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Task Name</dt>
        <dd>@Html.DisplayFor(model => model.TaskName)</dd>
        <dt>Description</dt>
        <dd>@Html.DisplayFor(model => model.TaskDescription)</dd>
        <dt>Start Time</dt>
        <dd>@Html.DisplayFor(model => model.StartTime)</dd>
        <dt>Status</dt>
        <dd>@Html.DisplayFor(model => model.Status)</dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Tasks", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>

